<%= form_with scope: :password_reset, local: true, url: user_path do |f| %>
  <p>
    <%= f.password_field :password, placeholder: '現在のパスワード' %>
  </p>

  <p>
    <%= f.password_field :reset, placeholder: '新しいパスワード' %>
  </p>

  <p>
    <%= f.password_field :reset_confirmation, placeholder: '新しいパスワード(再入力)' %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
