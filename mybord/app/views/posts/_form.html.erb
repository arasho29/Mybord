<%= form_for @post, local: true do |f| %>
  <p>
    <%= f.text_field :name, placeholder: 'Name', value: current_user.username %>
    <% if @post.errors.messages[:name].any? %>
    <span class="error"><%= @post.errors.messages[:name][0] %></span>
    <% end %>
  </p>

  <p>
    <%= f.text_field :mail, placeholder: 'Mail', value: current_user.mail   %>
    <% if @post.errors.messages[:mail].any? %>
      <span><%= @post.errors.messages[:mail][0] %></span>
    <% end %>
  </p>

  <p>
    <%= f.text_area :message, placeholder: 'Message' %>
    <% if @post.errors.messages[:message].any? %>
    <span><%= @post.errors.messages[:message][0] %></span>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
